<div class='flex flex-col items-center h-screen mt-16'>
  <div class='w-1/2 md:rounded-lg md:shadow-lg bg-white p-10 text-gray-800'>
    <h2 class='text-center text-xl font-bold mb-6'>ストックの登録</h2>
  
    <%= form_with model: @clothes_stock, url: users_kid_clothes_stocks_path do |f| %>
      <%= render "users/shared/error_messages", resource: @clothes_stock %>

        <div class='mb-4'>
          <%= f.label :kid, class: 'block text-sm font-medium text-gray-700'  %>
          <%= f.select :kid_id, @kids.pluck(:name, :id), { include_blank: "選択してください" }, class: 'w-full border border-gray-300 rounded-md mt-1' %>
        </div>

        <div class='mb-4'>
          <%= f.label :season, class: 'block text-sm font-medium text-gray-700'  %>
          <%= f.select :season_id, @seasons.pluck(:name, :id), { include_blank: "選択してください" }, class: 'w-full border border-gray-300 rounded-md mt-1' %>
        </div>

        <div class='mb-4'>
          <%= f.label :category, class: 'block text-sm font-medium text-gray-700'  %>
          <%= f.select :category_id, @categories.pluck(:name, :id), { include_blank: "選択してください" }, class: 'w-full border border-gray-300 rounded-md mt-1' %>
        </div>

        <div class='mb-4'>
          <%= f.label :size, class: 'block text-sm font-medium text-gray-700'  %>
          <%= f.select :size_id, @sizes.pluck(:name, :id), { include_blank: "選択してください" }, class: 'w-full border border-gray-300 rounded-md mt-1' %>
        </div>

        <div class='mb-4'>
          <%= f.label :comment, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_area :comment, class: 'w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border^blue-500 p-2 mt-1' %>
        </div>

        <div class='mb-4'>
          <%= f.label :image, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.file_field :image, class: '', accept: 'image/*' %>
          <%= f.hidden_field :image_cache%>
        </div>

      <div class="text-center mt-8">
        <%= f.submit '作成する', class: 'w-full mt-8 rounded-md bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 font-semibold shadow' %>
      </div>
    <% end %>
  </div>
</div>