<div class='flex flex-col items-center justify-center h-screen'>
  <div class='w-1/2 h-[50%] md:rounded-lg md:shadow-lg bg-white p-10 text-gray-800'>
    <h2 class='text-center text-xl font-bold mb-6 mt-8'>ストックの登録</h2>
  
    <%= form_with model: @clothes_stock, url:users_clothes_stocks_path do |f| %>
      <%= render "users/shared/error_messages", resource: @clothes_stock %>

      <div class='mb-4'>
        <%= f.label :comment, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_field :comment, class: 'w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border^blue-500 p-2 mt-1' %>
      </div>
      
      <div class="text-center mt-8">
        <%= f.submit nil, class: 'w-full mt-8 rounded-md bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 font-semibold shadow' %>
      </div>
    <% end %>
  </div>
</div>