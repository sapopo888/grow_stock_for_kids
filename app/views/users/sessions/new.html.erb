<div class='flex items-center justify-center h-screen'>
  <div class='w-full md:w-[40%] md:rounded-lg md:shadow-lg bg-white p-20 text-gray-800'>
    <h2 class='text-center text-xl font-semibold mb-12'><%= t('devise.sessions.new.title') %></h2>
  
    <div class='w-full flex-wrap whitespace-nowrap'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-2">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full ring ring-gray-300 rounded mb-2 p-1' %>
        </div>
        <div class="mb-2">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full ring ring-gray-300 rounded mb-2 p-1' %>
        </div>
        <!--
        <% if devise_mapping.rememberable? %>
          <div class="mb-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        -->
        <div class="text-center mt-8">
          <%= f.submit t('devise.sessions.new.sign_in'), class: 'w-full border border-gray-400 hover:border-gray-500 px-4 py-1 rounded bg-slate-500 hover:bg-blue-600 text-white' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
