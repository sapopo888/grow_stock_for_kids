<div class='flex flex-col items-center justify-center h-screen md:bg-gray-100'>
  <div class='w-full md:w-1/2 md:rounded-lg md:shadow-lg bg-white p-20 text-gray-800'>
    <h2 class='text-center text-2xl font-semibold mb-12'>子供の登録</h2>
  
    <div class='w-full flex-wrap whitespace-nowrap'>
      <%= form_with model: @kid do |f| %>
        <%= render "users/shared/error_messages", resource: @kid %>

        <div class='mb-2'>
          <%= f.label :name %> :<br />
          <%= f.text_field :name, class: 'w-full ring rounded ring-gray-300 mb-2 p-1' %>
        </div>
<!--
        <div class='mb-2'>
          <%= f.label :gender %> :<br />
          <%= f.select :gender, [[t('kid.new.male'), t('kid.new.male')],[t('kid.new.female'), t('kid.new.female')]], include_blank: "選択してください" %>
        </div>
-->
        
        <%= f.label :gender, t('activerecord.attributes.kid.gender') %> :<br />
        <div class='flex space-x-3'>
          <div>
            <%= f.radio_button :gender, :unknown %>
            <%= f.label :gender_unknown, t('activerecord.attributes.enums.kid.gender.unknown') %>
          </div>

          <div>
            <%= f.radio_button :gender, :male %>
            <%= f.label :gender_male, t('activerecord.attributes.enums.kid.gender.male') %>
          </div>

          <div>
            <%= f.radio_button :gender, :female %>
            <%= f.label :gender_female, t('activerecord.attributes.enums.kid.gender.female') %>
          </div>
        </div>


        <div class="text-center mt-8">
          <%= f.submit nil, class: 'w-full border border-gray-400 hover:border-gray-500 px-4 py-1 rounded bg-blue-200 hover:bg-blue-300' %>
        </div>
      <% end %>
    </div>
  </div>
</div>