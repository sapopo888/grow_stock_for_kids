<div class='flex m-20 justify-center h-screen'>
  <div class='w-full h-[80%] md:w-[60%] md:rounded-lg md:shadow-lg bg-white p-20 text-gray-800'>
    <h1 class='text-center text-2xl font-semibold mb-12'><%= t('kid.index.title') %></h1>
  
    <table class='table-auto w-full'>
      <thead class='text-left'>
        <tr class='bg-blue-100'>
          <th>名前</th>
          <th>ストック</th>
          <th>アクション</th>
        </tr>
      </thead>
  
      <tbody>
          <% if @kids.present? %>
            <% @kids.each do |kid| %>
              <tr>
                <td>
                  <% if kid.gender == "male" %>
                    <span class='text-blue-500'><%= link_to kid.name, edit_kid_path(kid) %></span>
                  <% elsif kid.gender == "female" %>
                    <span class='text-pink-500'><%= link_to kid.name, edit_kid_path(kid) %></span>
                  <% else %>
                    <span class='text-gray-500'><%= link_to kid.name, edit_kid_path(kid) %></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to '編集', "#", class: 'border rounded px-2 mr-2 bg-blue-100 hover:text-white hover:bg-blue-600' %>
                  <%= link_to '削除', "#", class: 'border rounded px-2 mr-2 bg-red-100 hover:text-white hover:bg-red-600' %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <%= t('kid.index.no_kids') %>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
