<%= search_form_for @q, url: url, html: { class: "w-full max-w-4xl mx-auto my-6" } do |f| %>
  <div class="bg-slate-100 shadow-md rounded-2xl px-6 py-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      
      <% if url === users_kids_all_stocks_path %>
        <!-- 名前 -->
        <%= f.label :kid, t('helpers.label.kid') %>
        <%= f.select :kid_id_eq, @kid.pluck(:name, :id), { include_blank: "選択してください" },
          class: "w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
      <% end %>

      <!-- 季節 -->
      <%= f.label :season, t('helpers.label.season') %>
      <%= f.select :season_id_eq, @season.pluck(:name, :id), { include_blank: "選択してください" },
        class: "w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>

      <!-- カテゴリー -->
      <%= f.label :category, t('helpers.label.category') %>
      <%= f.select :category_id_eq, @category.pluck(:name, :id), { include_blank: "選択してください" },
        class: "w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>

      <!-- サイズ -->
      <%= f.label :size, t('helpers.label.size') %>
      <%= f.select :size_id_eq, @size.pluck(:name, :id), { include_blank: "選択してください" },
        class: "w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>

      <!-- コメント -->
      <%= f.label :comment %>
      <%= f.search_field :comment_cont,
        placeholder: "コメントを入力...",
        class: "w-full px-3 py-2 bg-gray-50 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-700 placeholder-gray-400 md:col-span-2" %>
    </div>

    <!-- 検索ボタン -->
    <div class="flex justify-end mt-6">
      <%= f.submit t('helpers.submit.search'),
        class: "px-6 py-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg transition w-full md:w-auto" %>
    </div>
  </div>
<% end %>
