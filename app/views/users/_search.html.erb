<%= search_form_for @q, url: url, html: { class: "w-full max-w-lg mx-auto mb-4" } do |f| %>
  <div class="flex items-center space-x-2 bg-white shadow-md rounded-full px-4 py-2">
    <!-- 検索アイコン -->
    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1110.5 3a7.5 7.5 0 016.15 13.65z" />
    </svg>

    <!-- 入力フィールド -->
    <%= f.search_field :kid_name_or_category_name_or_size_name_or_comment_cont,
      placeholder: "キーワードを入力...",
      class: "flex-1 bg-transparent focus:outline-none text-gray-700 placeholder-gray-400" %>

    <!-- 検索ボタン -->
    <%= f.submit "検索",
      class: "px-4 py-1 text-white bg-blue-500 hover:bg-blue-600 rounded-full text-sm font-semibold transition" %>
  </div>
<% end %>
