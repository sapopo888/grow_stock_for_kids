<div class='flex flex-col items-center justify-center h-screen'>
  <div class='w-full md:w-[40%] md:rounded-lg md:shadow-lg bg-white p-20 text-gray-800'>
    <h2 class='text-center text-xl font-semibold mb-12'><%= t('devise.registrations.new.title') %></h2>
    
    <div class='w-full flex-wrap whitespace-nowrap'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="mb-2">
          <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'w-full ring rounded ring-gray-300 mb-2 p-1' %>
        </div>

        <div class="mb-2">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full ring rounded ring-gray-300 mb-2 p-1' %>
        </div>
      
        <div class="mb-2">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <% if @minimum_password_length %>
            <p class='text-sm text-red-600'>* <%= t('devise.shared.minimum_password_length.other', count: @minimum_password_length) %></p>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'w-full ring rounded ring-gray-300 mb-2 p-1' %>
        </div>
      
        <div class="mb-2">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full ring rounded ring-gray-300 mb-2 p-1' %>
        </div>
      
        <div class="text-center mt-8">
          <%= f.submit t('devise.registrations.new.sign_up'), class: 'w-full border border-gray-400 hover:border-gray-500 px-4 py-1 rounded bg-slate-500 hover:bg-blue-600 text-white' %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>
