<div class='flex justify-center items-center min-h-screen bg-gray-100'>
  <div class='w-[55%] rounded-lg shadow-lg bg-white text-gray-800 p-6'>
    <h1 class='text-center text-xl font-bold mb-6'>Size一覧</h1>

    <% if @sizes.present? %>
      <table class="table-auto w-full border-collapse border border-gray-300 text-center">
        <thead class="bg-gray-200">
          <tr>
            <th class='border border-gray-300 px-4 py-2'>ID</th>
            <th class='border border-gray-300 px-4 py-2'>Name</th>
            <th class='border border-gray-300 px-4 py-2'>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @sizes.each do |size| %>
            <tr class='hover:bg-gray-100'>
              <td class='border border-gray-300 px-4 py-2'><%= sizes.id %></td>
              <td class='border border-gray-300 px-4 py-2'><%= size.name %></td>
              <td class='border border-gray-300 px-4 py-2 space-x-2'>
                  <%= link_to '編集', edit_admins_size_path(size), class: 'px-3 py-1 rounded bg-green-500 text-white hover:bg-green-600' %>
                  <%= link_to '削除', admins_size_path(size), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'px-3 py-1 rounded bg-red-500 text-white hover:bg-red-600' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center text-gray-500 mt-6">Sizeはまだありません。</p>
    <% end %>
  </div>
</div>