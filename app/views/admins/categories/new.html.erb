<div class='flex flex-col items-center justify-center h-screen'>
  <div class='w-1/2 h-[50%] md:rounded-lg md:shadow-lg bg-white p-10 text-gray-800'>
    <h1 class='text-center text-xl font-bold mb-6 mt-8'>Categoryを作成する</h1>

    <%= form_with model: @category, url: admins_categories_path do |f| %>
      <%= render "admins/shared/error_messages", resource: @category %>

    <div class='mb-4'>
      <%= f.label :name, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :name, class: 'w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border^blue-500 p-2 mt-1' %>
    </div>
  
      <%= f.submit nil, class: 'w-full mt-8 rounded-md bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 font-semibold shadow' %>
    <% end %>
  </div>
</div>