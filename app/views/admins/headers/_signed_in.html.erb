<div class='w-full h-16 pt-8 bg-purple-800'>
  <div class='justify-items-center md:justify-items-end'>
    <div class='flex items-center md:mr-12 text-white space-x-4'>
    <%= link_to t('admin.header.user_all'), admins_users_path %>
      <div class='dropdown-container relative inline-block'>
        <button class="inline-flex items-center justify-center gap-x-1.5 rounded-md py-2 text-sm font-semibold text-white hover:text-gray-200">
          <%= t('admin.header.my_page') %>
          <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 text-gray-400">
            <path d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
